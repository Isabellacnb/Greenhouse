<%- include ("./templates/_header") %>
<br />
<div class="container">
    <div class="section-title">
        <div class="float-right">
            <span class="badge badge-secondary">Editing</span>
        </div>
        <h3><%=myplant.name%></h3>
    </div>
    <div class="card input-card">
        <div class="card-body body-input-card">
            <form action="/edit/<%= myplant._id%>" method="POST">
                <div class="form-group">
                    <label for="plantname">Plant name:</label>
                    <input class="form-control" type="text" name="name" placeholder="Name your plant" value="<%=myplant.name%>"/>
                </div>
                <div class="form-group">
                    <label for="loc">Location:</label>
                    <input class="form-control" type="text" name="location" placeholder="Where is your plant located?" value="<%=myplant.location%>"/>
                </div>
                <div class="form-group">
                    <label for="type">Type of plant:</label>
                    <select class="form-control" id="plant-select" name="type">
                        <option selected><%=myplant.type%></option>
                        <% for (var i = 0; i < planttypes.length; i++) { %>
                            <% if (planttypes[i].type !== myplant.type) { %>
                            <option><%= planttypes[i].type %></option>
                            <% } %>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="plantname">Last Watered:</label>
                    <input class="form-control" type="date" name="dateLastWatered" placeholder="When did you last water your plant?" value="<%=date%>"/>
                </div>
                <center>
                <button class="btn btn-submit" type="submit">Update plant</button>
                </center>
            </form>
        </div>
    </div>
</div>
<%- include ("./templates/_footer") %>
