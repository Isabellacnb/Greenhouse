<%- include ("./templates/_header") %>

<div class="container">
    <div class="section-title">
      <h3>PLANT TYPES</h3>
    </div>
  
  <% for (var i = 0; i < planttypes.length; i++) { %>
    <a href="/planttype/<%=planttypes[i]._id%>" class="btn card plant-card">
      <div class="card-body plant-body">
        <div class="row">
          <div class="col-sm-10">
            <h4 class="card-title"><%= planttypes[i].type %><span class="badge badge-pill badge-info"><%= planttypes[i].water %></span>
                <span class="badge badge-pill badge-secondary"><%= planttypes[i].temperature %></span></h4>
            <p class="card-species"><%= planttypes[i].description %></p>
          </div>
          <div class="col-sm-2 text-right plant-icons">
            <img src="<%= planttypes[i].image %>" width="85px" height="85px" />
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div><%- include ("./templates/_footer") %>
