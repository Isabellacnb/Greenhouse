<%- include ("./templates/_header") %>

<br />
<div class="container">
    <div class="section-title">
        <h3>ADD A PLANT TYPE TO THE GREENHOUSE DATABASE</h3>
    </div>
    <div class="card input-card">
        <div class="card-body body-input-card">
            <form action="/addplanttype" method="POST">
                <div class="form-group">
                    <label for="type">Plant Type:</label>
                    <input class="form-control" type="text" name="type" />
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" type="text" name="description" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="sunlight">Sunlight:</label>
                    <input class="form-control" type="text" name="sunlight" />
                </div>
                <div class="form-group">
                    <label for="water">Water:</label>
                    <input class="form-control" type="text" name="water" />
                </div>
                <div class="form-group">
                    <label for="daysToWater">Days to Water:</label>
                    <input class="form-control" type="number" name="daysToWater" />
                </div>
                <div class="form-group">
                    <label for="humidity">Humidity:</label>
                    <input class="form-control" type="text" name="humidity" />
                </div>
                <div class="form-group">
                    <label for="temperature">Temperature:</label>
                    <input class="form-control" type="text" name="temperature" />
                </div>
                <div class="form-group">
                    <label for="soil">Soil:</label>
                    <input class="form-control" type="text" name="soil" />
                </div>
                <div class="form-group">
                    <label for="problems">Common Problems:</label>
                    <textarea class="form-control" type="text" name="problems" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="precautions">Precautions:</label>
                    <textarea class="form-control" type="text" name="precautions" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="image">Image Link:</label>
                    <input class="form-control" type="text" name="image" />
                </div>
                <div class="form-group">
                    <label for="tips">Tips:</label>
                    <textarea class="form-control" type="text" name="tips" rows="5"></textarea>
                </div>
                <center>
                <button class="btn btn-submit" type="submit">Add plant type</button>
                </center>
            </form>
        </div>
    </div>
</div>

<%- include ("./templates/_footer") %>
