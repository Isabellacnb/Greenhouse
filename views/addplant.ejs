<%- include ("./templates/_header") %>
<br />
<div class="container">
    <div class="section-title">
        <h3>ADD A PLANT TO YOUR GREENHOUSE</h3>
    </div>
    <div class="card input-card">
        <div class="card-body body-input-card">
            <form action="/addmyplant" method="POST">
                <div class="form-group">
                    <label for="plantname">Plant name:</label>
                    <input class="form-control" type="text" name="name" placeholder="Name your plant" value="Plant <%=myplants.length + 1%>"/>
                </div>
                <div class="form-group">
                    <label for="loc">Location:</label>
                    <input class="form-control" type="text" name="location" placeholder="Where is your plant located?"/>
                </div>
                <div class="form-group">
                    <label for="type">Type of plant:</label>
                    <select class="form-control" id="plant-select" name="type">
                        <option selected disabled>Select a plant type</option>
                        <% for (var i = 0; i < planttypes.length; i++) { %>
                            <option><%= planttypes[i].type %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="plantname">Last Watered:</label>
                    <input class="form-control" type="date" name="dateLastWatered" placeholder="When did you last water your plant?"/>
                </div>
                <center>
                <button class="btn btn-submit" type="submit">Add plant</button>
                </center>
            </form>
        </div>
    </div>
</div>
<%- include ("./templates/_footer") %>
