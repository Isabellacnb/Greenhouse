<%- include ("./templates/_header") %>
<br />
<div class="container">
    <div class="section-title">
        <h3><%=user.name%></h3>
    </div>
    <div class="card input-card">
        <div class="card-body body-input-card">
            <div class="mb-3 row">
                <label for="username" class="col-sm-4 col-form-label">Name: </label>
                <div class="col-sm-6">
                  <input type="text" readonly class="form-control-plaintext" value="<%=user.name%>">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="email" class="col-sm-4 col-form-label">Email: </label>
                <div class="col-sm-6">
                  <input type="text" readonly class="form-control-plaintext" value="<%=user.email%>">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="username" class="col-sm-4 col-form-label"># of Plants: </label>
                <div class="col-sm-6">
                  <input type="text" readonly class="form-control-plaintext" value="<%=myplants.length%>">
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ("./templates/_footer") %>
